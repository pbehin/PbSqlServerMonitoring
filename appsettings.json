{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "localhost",
  "AllowedOrigins": [
    "https://localhost",
    "https://your-production-domain.com"
  ],
  "Security": {
    "EnableAuthentication": false,
    "AllowAnonymousInDevelopment": true,
    "ApiKeyEnvironmentVariable": "PB_MONITOR_API_KEY"
  },
  "Authentication": {
    "Google": {
      "_comment": "Get these from https://console.cloud.google.com/apis/credentials",
      "_comment2": "Set authorized redirect URI to: https://your-domain.com/api/auth/callback or http://localhost:PORT/api/auth/callback for development",
      "ClientId": "",
      "ClientSecret": ""
    }
  },
  "ConnectionStrings": {
    "_comment_PbMonitorConnection": "Override with PB_MONITOR_CONNECTION_STRING environment variable in production",
    "PbMonitorConnection": "Server=(localdb)\\mssqllocaldb;Database=PbMonitorDB;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true;Max Pool Size=20;Min Pool Size=5;Connection Timeout=30"
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowSeconds": 60
  },
  "Monitoring": {
    "_comment": "MaxConnections can be overridden with PB_MONITOR_MAX_CONNECTIONS environment variable",
    "MaxConnections": 5,
    "DefaultUserMaxConnections": 2,
    "_adminComment": "Email of user to auto-promote to Admin on first login",
    "AdminEmail": ""
  },
  "Grafana": {
    "_comment": "Configuration for Grafana dashboard embedding",
    "BaseUrl": "http://localhost:3000",
    "DashboardUid": "sql-server-monitoring",
    "Theme": "dark"
  },
  "SqlExporter": {
    "_comment": "Configuration for sql_exporter integration",
    "ConfigPath": "monitoring/sql_exporter/sql_exporter.yml",
    "ReloadUrl": "http://127.0.0.1:9399/reload",
    "DummyConnectionString": "sqlserver://sa:dummy@dummy-host:1433"
  },
  "Prometheus": {
    "_comment": "Internal API key for secure communication between services",
    "InternalApiKey": "PbMonitor_SecureKey_2026!",
    "InternalUrl": "http://localhost:9090"
  },
  "ExecutionPlans": {
    "_comment": "Configuration for execution plan collection and storage",
    "Enabled": true,
    "RetentionDays": 30,
    "MaxStorageMB": 100
  }
}