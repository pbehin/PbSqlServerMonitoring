# SQL Server Monitoring Stack - Environment Configuration
# Copy this file to .env and configure your settings

# .NET App Configuration
# URL where Prometheus and sql_exporter can reach your .NET app
DOTNET_APP_URL=http://192.168.0.171:8701

# Internal API key for secure communication between sql_exporter and .NET app
# Should match the value in appsettings.json -> Prometheus:InternalApiKey
INTERNAL_API_KEY=[ENCRYPTION_KEY]

# Prometheus Configuration
PROMETHEUS_RETENTION=15d

# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

SQLSERVER_HOST=host.containers.internal  # or your SQL Server IP
SQLSERVER_PORT=1433
SQLSERVER_USER=sa
SQLSERVER_PASSWORD=YourPassword